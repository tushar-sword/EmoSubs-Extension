{
  "manifest_version": 3,
  "name": "EmoSubs",
  "version": "0.1.0",
  "description": "Enhances Disney+ Hotstar subtitles with emotion-aware AI rewriting.",
  "permissions": [
    "activeTab",
    "storage"  
  ],
  "host_permissions": [
    "https://www.hotstar.com/*",
    "http://localhost:6002/*"  
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.hotstar.com/*"],
      "js": ["content.js"],  
      "css": ["substyles.css"],  
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}